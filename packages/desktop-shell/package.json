{
  "name": "@recative/desktop-shell",
  "version": "0.3.0",
  "main": "build/main.js",
  "scripts": {
    "prepare-electron": "rollup -c",
    "electron": "yarn run prepare-electron && electron-forge start",
    "start": "npm-run-all -l -p start-web start-electron",
    "start-web": "react-scripts start",
    "start-electron": "npm-run-all -l prepare-electron electron",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepare-package": "yarn run build && yarn run prepare-electron",
    "package:win32-x64": "electron-forge package --arch=x64 --platform=win32",
    "package:darwin-x64": "electron-forge package --arch=x64 --platform=darwin",
    "package:darwin-arm64": "electron-forge package --arch=arm64 --platform=darwin",
    "package:darwin-universal": "electron-forge package --arch=universal --platform=darwin",
    "package-on-windows": "yarn run prepare-package && yarn run package:win32-x64 && yarn run package:darwin-x64 && yarn run package:darwin-arm64",
    "package": "yarn run prepare-package && yarn run package:win32-x64 && yarn run package:darwin-x64 && yarn run package:darwin-arm64 && yarn run package:darwin-universal",
    "make": "electron-forge make",
    "clean": "rimraf build"
  },
  "dependencies": {
    "@types/fs-extra": "9.0.13",
    "async-call-rpc": "^6.1.5",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "10.0.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.3",
    "@electron-forge/maker-zip": "^6.0.3",
    "electron": "^21.2.0",
    "npm-run-all": "^4.1.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
